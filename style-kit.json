{
  "meta": {
    "project": "Shift Portal de Marca",
    "description": "Website Style Kit & Design System Documentation",
    "version": "1.0.0"
  },
  "theme": {
    "colors": {
      "brand": {
        "primary": {
          "name": "Royal Blue",
          "value": "#0047AB",
          "variable": "--primary",
          "usage": "Core brand energy, main actions, active states"
        },
        "secondary": {
          "name": "Magenta",
          "value": "#FF00FF",
          "variable": "--secondary",
          "usage": "Accent catalyst, focal points, vibration"
        },
        "tertiary": {
          "name": "Navy Blue",
          "value": "#00235E",
          "variable": "--tertiary",
          "usage": "Corporate base, depth, contrast, text color"
        }
      },
      "surface": {
        "base": {
          "name": "Surface",
          "value": "#FFFFFF",
          "usage": "Card backgrounds, elevated elements"
        },
        "dim": {
          "name": "Surface Dim",
          "value": "#F5F5F7",
          "usage": "Secondary backgrounds, hover states"
        },
        "container": {
          "name": "Surface Container",
          "value": "#E8EAF6",
          "usage": "Main app background"
        },
        "glass": {
          "name": "Glass",
          "value": "rgba(255, 255, 255, 0.08)",
          "variable": "--glass",
          "usage": "Glassmorphism backgrounds"
        },
        "glassBorder": {
          "name": "Glass Border",
          "value": "rgba(255, 255, 255, 0.12)",
          "variable": "--glass-border",
          "usage": "Borders on glass elements"
        }
      },
      "text": {
        "primary": {
          "name": "On Surface",
          "value": "#00235E",
          "usage": "Primary text color"
        }
      }
    },
    "typography": {
      "fonts": {
        "display": {
          "name": "Glitz",
          "family": "'Glitz', sans-serif",
          "usage": "Headlines of High Impact (+48px), brand personality"
        },
        "structure": {
          "name": "Figtree",
          "family": "'Figtree', sans-serif",
          "usage": "Section Titles, Navigation, UI Elements, Buttons"
        },
        "body": {
          "name": "Fira Sans",
          "family": "'Fira Sans', sans-serif",
          "usage": "Long form reading, body copy (Mozilla Text)"
        }
      },
      "philosophy": "Echo & Resonance - Layouts built on Fibonacci Grid and Golden Ratio (1.618)."
    },
    "shadows": {
      "elevation-1": "0 1px 2px rgba(0,0,0,0.3), 0 1px 3px rgba(0,0,0,0.15)",
      "elevation-2": "0 1px 2px rgba(0,0,0,0.3), 0 2px 6px rgba(0,0,0,0.15)",
      "elevation-3": "0 4px 8px rgba(0,0,0,0.3), 0 6px 20px rgba(0,0,0,0.15)"
    }
  },
  "components": {
    "buttons": {
      "common": {
        "shape": "rounded-full",
        "font": "Figtree (Medium)",
        "interaction": "Ripple effect on click, scale down on active",
        "transition": "all duration-200 ease-[cubic-bezier(0.4,0,0.2,1)]"
      },
      "variants": {
        "filled": {
          "background": "var(--primary)",
          "text": "#FFFFFF",
          "hover": "bg-primary/90, shadow-elevation-2"
        },
        "outlined": {
          "background": "transparent",
          "border": "1px solid var(--primary)",
          "text": "var(--primary)",
          "hover": "bg-primary/5"
        },
        "text": {
          "background": "transparent",
          "text": "var(--primary)",
          "hover": "bg-primary/5"
        },
        "elevated": {
          "background": "#FFFFFF",
          "text": "var(--primary)",
          "shadow": "elevation-1",
          "hover": "bg-surface-dim, shadow-elevation-2"
        }
      },
      "sizes": {
        "small": {
          "height": "32px (h-8)",
          "padding": "0 16px (px-4)",
          "textSize": "0.875rem (text-sm)"
        },
        "medium": {
          "height": "40px (h-10)",
          "padding": "0 24px (px-6)",
          "textSize": "1rem (text-base)"
        },
        "large": {
          "height": "56px (h-14)",
          "padding": "0 32px (px-8)",
          "textSize": "1.125rem (text-lg)"
        }
      }
    },
    "cards": {
      "glass": {
        "background": "var(--glass)",
        "backdropFilter": "blur(12px)",
        "border": "1px solid var(--glass-border)"
      },
      "glassDark": {
        "background": "rgba(0, 0, 0, 0.2)",
        "backdropFilter": "blur(16px)",
        "border": "1px solid rgba(255, 255, 255, 0.1)"
      }
    }
  },
  "animations": {
    "float": {
      "description": "Vertical floating motion",
      "duration": "6s",
      "timing": "ease-in-out infinite"
    },
    "mesh": {
      "description": "Background gradient movement",
      "duration": "15s",
      "timing": "ease infinite"
    },
    "pulse-glow": {
      "description": "Glowing shadow effect",
      "duration": "2s",
      "timing": "ease-in-out infinite",
      "color": "rgba(255, 0, 255, 0.3-0.6)"
    },
    "cardStack": {
      "description": "Entrance animation for cards",
      "transform": "translateY(30px) -> 0, scale(0.95) -> 1",
      "opacity": "0 -> 1"
    }
  }
}
